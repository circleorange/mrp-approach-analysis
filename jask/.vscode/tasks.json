            "command": "ant compile",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Compile Java sources without creating JAR"
        },
        {
            "label": "Run Application",
            "type": "shell",
